<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9DD"
    tools:context=".MainMenu">

    <!-- Judul -->

    <!-- Tombol 1 -->

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:fontFamily="serif"
        android:text="PILIH HURUF"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHiragana"
        style="@style/MainMenuButton"
        android:backgroundTint="#F28B82"
        android:text="@string/hiragana_button_text"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Tombol 2 -->
    <Button
        android:id="@+id/btnKatakana"
        style="@style/MainMenuButton"
        android:backgroundTint="#4E878C"
        android:text="@string/katakana_button_text"
        app:layout_constraintTop_toBottomOf="@id/btnHiragana"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Tombol 3 -->
    <Button
        android:id="@+id/btnKanji"
        style="@style/MainMenuButton"
        android:backgroundTint="#D79B35"
        android:text="@string/kanji_button_text"
        app:layout_constraintTop_toBottomOf="@id/btnKatakana"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>